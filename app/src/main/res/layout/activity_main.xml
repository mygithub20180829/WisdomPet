<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liuwang.wisdompet.activity.MainActivity">

    <!--内容-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/container_content">
    </RelativeLayout>

    <!--功能菜单-->
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_menu"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_house"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/house"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/menu_house_icon_selector"/>
            <TextView
                android:id="@+id/wisdom_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智宠社区"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_appoint"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/appoint"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/menu_appoint_icon_selector"/>
            <TextView
                android:id="@+id/wisdom_appoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智宠预约"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_class"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/_class"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/menu_class_icon_selector"/>
            <TextView
                android:id="@+id/wisdom_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智宠课堂"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_search"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/menu_search_icon_selector"/>
            <TextView
                android:id="@+id/wisdom_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智宠搜索"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_me"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/me"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/menu_me_icon_selector"/>
            <TextView
                android:id="@+id/wisdom_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的智宠"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
